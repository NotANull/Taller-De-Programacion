	AreaJefe: AreaP(1, 1, 1, 1)
	areaPrimero: AreaPC(1, 20, 100, 20)
	areaSegundo: AreaPC(1, 21, 100, 21)
	areaTercero: AreaPC(1, 22, 100, 22)

