programa punto6

procesos

	proceso RecorrerYDepositar(E papeles: numero; E flores: numero; E flor: boolean; E papel: boolean; E callePuesto: numero)
	comenzar
		Pos(1, callePuesto)
		repetir 2
			derecha
		si((flor = V) & (papel = V))
			mientras((papeles > 0) | (flores > 0))
				si(papeles > 0)
					depositarPapel
					papeles:= papeles - 1
				si(flores > 0)
					depositarFlor
					flores:= flores - 1
				mover
		sino
			si((flor = V) & (papel = F))
				repetir flores
					depositarFlor
					mover
			sino
				si((flor = F) & (papel = V))
					repetir papeles
						depositarPapel
						mover
	fin

	proceso enviar(E numRobot: numero; E calle: numero)
	comenzar
		si(numRobot = 1)
			EnviarMensaje(calle, r1)
		sino 
			si(numRobot = 2)
				EnviarMensaje(calle, r2)
			sino
				si(numRobot = 3)
					EnviarMensaje(calle, r3)
	fin

	proceso recolectar(ES papeles: numero; ES flores: numero; E flor: boolean; E papel: boolean)
	comenzar
		si((flor = V) & (papel = V))
			mientras(HayPapelEnLaEsquina)
				tomarPapel
				papeles:= papeles + 1
			mientras(HayFlorEnLaEsquina)
				tomarFlor
				flores:= flores + 1
		sino
			si((flor = V) & (papel = F))
				mientras(HayFlorEnLaEsquina)
					tomarFlor
					flores:= flores + 1
			sino
				si((flor = F) & (papel = V))
					mientras(HayPapelEnLaEsquina)
						tomarPapel
						papeles:= papeles + 1
	fin

areas

	{cuadranteR1: AreaPC(2, 2, 7, 7)} {No me deja por cuadrante ya que me dice}
	{cuadranteR2: AreaPC(5, 5, 14, 14)} {Que hay esquinas que se superponen así que}
	{cuadranteR3: AreaPC(9, 9, 15, 15)} {Le mandé un area en donde van a estar todos}
