programa parcialEquiposGrandes

procesos

	proceso depositar(E flores: numero)
	variables
		avActual: numero
		caActual: numero
	comenzar
		avActual:= PosAv
		caActual:= PosCa
		repetir flores
			BloquearEsquina(20, 20)
			Pos(20, 20)
			depositarFlor
			Pos(avActual, caActual)
			LiberarEsquina(20, 20)
	fin

	proceso juntar(ES flores: numero)
	comenzar
		mientras(HayFlorEnLaEsquina)
			tomarFlor
			flores:= flores + 1
	fin

	proceso recolectar(ES flores: numero)
	variables
		quienesSon: numero
	comenzar
		repetir 10
			repetir 2
				RecibirMensaje(quienesSon, *)
			mover
			juntar(flores)
	fin

	proceso trabajarSupVerde(E quienSoy: numero)
	variables
		avActual: numero
		caActual: numero
		ok: boolean
		quienEs: numero
	comenzar
		repetir 3
			derecha
		mover {Entro al área de trabajo}
		repetir 9
			avActual:= PosAv
			caActual:= PosCa
			ok:= V
			mientras(ok)
				si(HayFlorEnLaEsquina)
					tomarFlor
					BloquearEsquina(PosAv, PosCa - 1)
					Pos(PosAv, PosCa - 1)
					depositarFlor
					Pos(avActual, caActual)
					LiberarEsquina(PosAv, PosCa - 1)
				sino
					ok:= F
					mover
					EnviarMensaje(quienSoy, infVerde)
					RecibirMensaje(quienEs, infVerde)
					EnviarMensaje(quienSoy, medioVerde)
		avActual:= PosAv
		caActual:= PosCa
		ok:= V
		mientras(ok)
			si(HayFlorEnLaEsquina)
				tomarFlor
				BloquearEsquina(PosAv, PosCa - 1)
				Pos(PosAv, PosCa - 1)
				depositarFlor
				Pos(avActual, caActual)
				LiberarEsquina(PosAv, PosCa - 1)
			sino
				ok:= F
				EnviarMensaje(quienSoy, infVerde)
				RecibirMensaje(quienEs, infVerde)
				EnviarMensaje(quienSoy, medioVerde)
	fin

	proceso trabajarInfVerde(E quienSoy: numero)
	variables
		avActual: numero
		caActual: numero
		ok: boolean
		quienEs: numero
	comenzar
		repetir 3
			derecha
		mover {Entro al área de trabajo}
		repetir 9
			avActual:= PosAv
			caActual:= PosCa
			ok:= V
			mientras(ok)
				si(HayFlorEnLaEsquina)
					tomarFlor
					BloquearEsquina(PosAv, PosCa + 1)
					Pos(PosAv, PosCa + 1)
					depositarFlor
					Pos(avActual, caActual)
					LiberarEsquina(PosAv, PosCa + 1)
				sino
					ok:= F
					mover
					EnviarMensaje(quienSoy, supVerde)
					RecibirMensaje(quienEs, supVerde)
					EnviarMensaje(quienSoy, medioVerde)
		avActual:= PosAv
		caActual:= PosCa
		ok:= V
		mientras(ok)
			si(HayFlorEnLaEsquina)
				tomarFlor
				BloquearEsquina(PosAv, PosCa + 1)
				Pos(PosAv, PosCa + 1)
				depositarFlor
				Pos(avActual, caActual)
				LiberarEsquina(PosAv, PosCa + 1)
			sino
				ok:= F
				EnviarMensaje(quienSoy, supVerde)
				RecibirMensaje(quienEs, supVerde)
				EnviarMensaje(quienSoy, medioVerde)
	fin

